@page "/reporte-empeno-inventario"
@* Incluir el archivo de CSS *@
<link href="css/reporteEmpenoInventario.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
@using Microsoft.AspNetCore.Components.Forms

<!-- Cabecera de pestañas -->
<div class="tab-bar-container">
    <TabBar TabItems="@tabItems" ActiveTab="@selectedTab" OnTabSelected="OnTabSelected" />
</div>

<div class="reporte-detallado-container">
    <!-- Título del reporte -->
    <div class="header">
        <h3>Reporte de inventario</h3>
        <svg class="favorito" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" @onclick="ToggleFavorito">
            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"
                  stroke="#000000" stroke-width="2" fill="@favoritoColor" />
        </svg>
    </div>


    <div class="selector-container">
        <label class="label-empenos">Empeños</label>
        <div class="select-empenos-container">
            <select class="select-empenos">
                <option>Todos</option>
                <option>Vitrina</option>
                <option>Apartados</option>
                <option>Otros</option>
            </select>
            <i class="fas fa-caret-down select-icon"></i> <!-- Icono de Font Awesome -->
        </div>
        <div class="radio-group-detallado">
            <label class="radio-label">
                <input type="radio" name="empenos" value="vitrina" checked> Vitrina
            </label>
            <label class="radio-label">
                <input type="radio" name="empenos" value="apartados"> Apartados
            </label>
            <label class="radio-label">
                <input type="radio" name="empenos" value="otros"> Otros
            </label>
        </div>
    </div>


    <!-- Contenedor de botones -->
    <div class="button-container">
        <div class="button-column">
            <button class="btn-cancelar">Limpiar</button>
            <button class="btn-cancelar">Cancelar</button>
        </div>
        <div class="button-column">
            <button class="btn-buscar">Buscar</button>
            <button class="btn-imprimir">Imprimir</button>
        </div>
    </div>
</div>

@code {
    private List<string> tabItems = new List<string> {  "Empeño",
        "Historico",
        "Detallado",
         "Inventarios",
        "Resumen",
         "Contratos Vencidos",
        "Pase a remate",
        "Desempeño",
        "Refrendos",
        "Pagos Fijos", };
    private string EmpeñoSeleccionado { get; set; } = "Vitrina";
    private string selectedTab = "Inventarios";
    private bool EsFavorito { get; set; }
    private string favoritoColor => EsFavorito ? "#22C55E" : "none";
    private void OnTabSelected(string selectedTab) => this.selectedTab = selectedTab;
    private void ToggleFavorito() => EsFavorito = !EsFavorito;
    private void Cancelar() { /* Lógica de cancelación */ }
    private void Imprimir() { /* Lógica de impresión */ }
}
